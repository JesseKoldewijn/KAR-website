---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/layout/Navigation.astro';
import ImageGallery from '../../components/islands/ImageGallery';

import room from '../../data/rooms/bathroom/roomConfig';

const roomRenders = room?.renders ?? [];
---

<Layout title={`${room.title} - 3D Render Gallery`}>
  <Navigation />
  
  <div class="w-full h-64 md:h-96 overflow-hidden">
    <img 
      src={room.bannerImageUrl} 
      alt={`${room.title} banner`}
      class="w-full h-full object-cover"
    />
  </div>
  
  <main class="container mx-auto px-4 py-16">
    <h1 class="text-5xl font-bold mb-4">{room.title}</h1>
    <p class="text-xl text-muted-foreground mb-12">
      {room.subtitle}
    </p>
    
    <ImageGallery client:visible renders={roomRenders} />
  </main>
</Layout>
